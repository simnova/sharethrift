{
	"extends": "@cellix/typescript-config/tsconfig-base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"jsx": "react-jsx",
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"exactOptionalPropertyTypes": false,
		"skipLibCheck": true,
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"noPropertyAccessFromIndexSignature": false
	},
	"include": ["src/**/*"],
	"exclude": [
		"node_modules",
		"dist",
		"src/**/*.test.ts",
		"src/**/*.test.tsx",
		"src/**/*.spec.ts",
		"src/**/*.spec.tsx"
	]
}
