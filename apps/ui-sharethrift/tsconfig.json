{
	"extends": "@cellix/typescript-config/base.json",
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"jsx": "react-jsx",
		"lib": ["ES2023", "DOM", "DOM.Iterable"],
		"exactOptionalPropertyTypes": false,
		"skipLibCheck": true
