        "test:watch": "vitest",
        "lint": "biome lint",
        "clean": "rimraf dist"
    },
    "dependencies": {
        "@cellix/domain-seedwork": "workspace:*",
        "@cellix/event-bus-seedwork-node": "workspace:*"
    },
    "peerDependencies": {
        "mongoose": "^8.0.0",
        "mongodb": "^6.0.0"
    },
    "devDependencies": {
        "@cellix/typescript-config": "workspace:*",
        "@cellix/vitest-config": "workspace:*",
        "mongoose": "catalog:",
        "mongodb": "catalog:",
        "mongodb-memory-server": "^10.1.4",
        "rimraf": "^6.0.1"
    }
