{
    "name": "@cellix/mongoose-seedwork",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "files": [
        "dist"
    ],
    "exports": {
        ".": {
            "types": "./dist/src/index.d.ts",
            "default": "./dist/src/index.js"
        }
    },
    "scripts": {
        "prebuild": "biome lint",
        "build": "tsc --build",
        "watch": "tsc --watch",
        "test": "vitest run",
        "test:coverage": "vitest run --coverage",
