{
	"name": "@sthrift/graphql",
	"version": "1.0.0",
	"private": true,
	"type": "module",
	"files": [
		"dist",
		"src/schema/**/*.graphql"
	],
	"exports": {
		".": {
			"types": "./dist/src/index.d.ts",
			"default": "./dist/src/index.js"
		}
	},
	"scripts": {
		"prebuild": "biome lint",
		"build": "tsc --build",
		"watch": "tsc --build --watch",
