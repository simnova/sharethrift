{
	"compilerOptions": {
		/* Type Checking */
		"allowUnreachableCode": false,
		"allowUnusedLabels": false,
		"exactOptionalPropertyTypes": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitOverride": true,
		"noImplicitReturns": true,
		"noPropertyAccessFromIndexSignature": true,
		"noUncheckedIndexedAccess": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"strict": true,

		/* Modules */
		"allowImportingTsExtensions": true,
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"noUncheckedSideEffectImports": true,
		"rewriteRelativeImportExtensions": true,

		/* Emit */
		"declaration": true,
		"sourceMap": true,

		/* Interop Constraints */
		"erasableSyntaxOnly": true,
		"esModuleInterop": true,
		"verbatimModuleSyntax": true,

		/* Language and Environment */
		"lib": ["ES2023"],
		"target": "ES2022",

		/* Projects */
		"composite": true,
		"incremental": true,

		/* Completeness */
	"skipLibCheck": true /* Skip type checking to bypass error related to mdx: https://www.google.com/search?q=..%2F..%2Fnode_modules%2F%40types%2Fmdx%2Ftypes.d.ts%3A23%3A38+-+error+TS2503%3A+Cannot+find+namespace+%27JSX%27.&oq=..%2F..%2Fnode_modules%2F%40types%2Fmdx%2Ftypes.d.ts%3A23%3A38+-+error+TS2503%3A+Cannot+find+namespace+%27JSX%27.&gs_lcrp=EgZjaHJvbWUyBggAEEUYOdIBBzE5NGowajSoAgCwAgE&sourceid=chrome&ie=UTF-8 */
	}
}
