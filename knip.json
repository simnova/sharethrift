{
	"$schema": "https://unpkg.com/knip@5/schema.json",
	"workspaces": {
		"apps/api": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.ts"]
		},
		"apps/ui-sharethrift": {
			"entry": ["src/main.tsx"],
			"project": ["src/**/*.{ts,tsx}"]
		},
		"apps/docs": {
			"entry": ["src/**/*.{ts,tsx,js,jsx}"],
			"project": ["src/**/*.{ts,tsx,js,jsx}"]
		},
		"packages/cellix/*": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.ts"]
		},
		"packages/cellix/domain-seedwork": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.ts"],
			"ignore": [
				"**/handle-event.ts",
				"**/publish-event.ts",
				"**/child-entity.ts"
			]
		},
		"packages/cellix/event-bus-seedwork-node": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.ts"],
			"ignore": ["**/sync-domain-event-bus.ts"]
		},
		"packages/cellix/mongoose-seedwork": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.ts"],
			"ignore": [
				"**/mongo-connection.ts",
				"**/base.ts",
				"**/mongoose-prop-array.ts"
			]
		},
		"packages/cellix/mock-payment-server": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.ts"],
			"ignore": ["**/payment-interface.ts"]
		},
		"packages/cellix/ui-core": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.{ts,tsx}"]
		},
		"packages/sthrift/*": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.ts"],
			"ignore": [
				"**/graphql-tools-scalars.ts",
				"**/readonly/appeal-request/listing-appeal-request/index.ts",
				"**/readonly/appeal-request/user-appeal-request/index.ts"
			]
		},
		"packages/sthrift/service-cybersource": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.ts"],
			"ignore": ["**/cybersource-interface.ts"]
		},
		"packages/sthrift/ui-components": {
			"entry": ["src/index.ts"],
			"project": ["src/**/*.{ts,tsx}"]
		}
	},
	"ignoreWorkspaces": ["packages/cellix/typescript-config"],
	"ignore": [
		"build-pipeline/scripts/**",
		"**/*.test.ts",
		"**/*.spec.ts",
		"**/*.stories.tsx",
		"**/dist/**",
		"**/coverage/**",
		"**/__tests__/**",
		"**/tests/**"
	],
	"ignoreDependencies": [
		"@types/*",
		"@cucumber/node",
		"@cucumber/pretty-formatter",
		"@serenity-js/assertions",
		"@serenity-js/console-reporter",
		"@serenity-js/core",
		"@serenity-js/cucumber",
		"@serenity-js/serenity-bdd",
		"@graphql-typed-document-node/core",
		"ts-scope-trimmer-plugin",
		"@opentelemetry/semantic-conventions",
		"eslint",
		"@eslint/js",
		"typescript-eslint",
		"ts-node",
		"ts-node-dev",
		"tsc-watch"
	],
	"ignoreBinaries": ["func"],
	"rules": {
		"types": "off"
	}
}
